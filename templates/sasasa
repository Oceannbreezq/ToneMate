    <script>
        function openCamera() {
            const constraints = {
                video: true
            };

            navigator.mediaDevices.getUserMedia(constraints)
            .then((stream) => {
                const video = document.querySelector('video');
                video.srcObject = stream;
                video.play();
                document.querySelector('.capture-btns').classList.add('active');
            })
            .catch((error) => {
                console.error('Error accessing camera: ', error);
            });
        }

        function capturePhoto() {
            const canvas = document.querySelector('canvas');
            const video = document.querySelector('video');
            canvas.width = video.videoWidth;
            canvas.height = video.videoHeight;
            const context = canvas.getContext('2d');
            context.drawImage(video, 0, 0, canvas.width, canvas.height);
            document.querySelector('.capture-btns').classList.remove('active');
            document.querySelector('.post-capture-btns').classList.add('active');
            video.pause();
        }

        function retakePhoto() {
            const video = document.querySelector('video');
            video.play();
            document.querySelector('.post-capture-btns').classList.remove('active');
            document.querySelector('.capture-btns').classList.add('active');
        }

        
        function uploadPhoto() {
    const canvas = document.querySelector('canvas');
    canvas.toBlob(function(blob) {
        const formData = new FormData();
        
        // Mendapatkan timestamp atau ID unik untuk menghindari overwriting
        const timestamp = new Date().getTime();
        const filename = `selfie_${timestamp}.png`;

        const file = new File([blob], filename, { type: "image/png" });
        formData.append('file', file);

        // Send the image data to the server via AJAX
        fetch('/', {
            method: 'POST',
            body: formData
        }).then(response => {
            if (response.ok) {
                window.location.href = "/result";
            } else {
                alert('Failed to upload image.');
            }
        }).catch(error => {
            console.error('Error uploading image:', error);
        });
    }, 'image/png');
}

    </script>
